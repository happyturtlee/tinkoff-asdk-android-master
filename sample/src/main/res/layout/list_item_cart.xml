<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_book_cover"
        style="@style/BookCoverImageView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cover_1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_book_title"
            style="@style/BookTitleTextView"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:ellipsize="end"
            android:maxLines="4"
            tools:text="Название книги" />

        <TextView
            android:id="@+id/tv_book_price"
            style="@style/PriceBlueTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:textAppearance="@style/BookPriceText"
            tools:text="Цена: 100500 тенге" />

        <TextView
            android:id="@+id/tv_delete"
            style="@style/GreyButton"
            android:layout_marginTop="8dp"
            android:text="@string/delete"/>

    </LinearLayout>

</LinearLayout>