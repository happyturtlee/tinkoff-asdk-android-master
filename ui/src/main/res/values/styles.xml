<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>


    <style name="AcquiringTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/acq_colorMain</item>
        <item name="colorPrimaryDark">@color/acq_colorMain</item>
        <item name="colorAccent">@color/acq_colorButtonText</item>
        <item name="acqTitleTextViewStyle">@style/AcquiringTitleStyle</item>
        <item name="acqTextViewStyle">@style/AcquiringDescriptionStyle</item>
        <item name="acqEditTextStyle">@style/AcquiringFieldStyle</item>
        <item name="acqContentViewStyle">@style/AcquiringContentView</item>
        <item name="acqButtonStyle">@style/AcquiringButtonStyle</item>
        <item name="acqAccentTextStyle">@style/AcquiringAccentTextStyle</item>
        <item name="acqItemsStyle">@style/AcquiringListItems</item>
        <item name="acqItemsDividerStyle">@style/AcquiringItemsDivider</item>
        <item name="acqPriceLayoutStyle">@style/AcquiringPriceLayoutStyle</item>
        <item name="acqViewDivider">16dp</item>
        <item name="acqContentBlockDivider">20dp</item>
        <item name="acqPayFormTitle">@string/acq_screen_title</item>
        <item name="acqCardIcons">@style/AcquiringCardSystemsIcons</item>
        <item name="acqKeyboardStyle">@style/AcquiringKeyboardStyle</item>
        <!---->
        <item name="acqPayTitleStyle">@style/AcquiringPayTitleStyle</item>
        <item name="acqPayDescriptionStyle">@style/AcquiringPayDescriptionStyle</item>
        <item name="acqPayEmailStyle">@style/AcquiringPayEmailStyle</item>
        <item name="acqPaySecureIconStyle">@style/AcquiringPaySecureIconStyle</item>
        <item name="acqPayAmountPosition">onPayButton</item>
        <item name="acqPayButtonAndIconPosition">buttonUnderFieldsIconsOnBottom</item>
        <item name="acqPayWithAmountFormat">@string/acq_pay_with_amount</item>

    </style>

    <style name="AcquiringNfcTheme" parent="AcquiringTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AcquiringFieldStyle" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/acq_colorTitle</item>
        <item name="android:textColorHint">@color/acq_colorDescription</item>
        <item name="android:background">@drawable/acq_edit_text_bg</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="AcquiringButtonStyle" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/acq_button_bg</item>
    </style>

    <style name="AcquiringTitleStyle">
        <item name="android:textColor">@color/acq_colorTitle</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AcquiringDescriptionStyle">
        <item name="android:textColor">@color/acq_colorDescription</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AcquiringAccentTextStyle" parent="AcquiringTitleStyle">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="AcquiringPriceLayoutStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AcquiringContentView">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AcquiringItemsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/acq_colorDescription</item>
    </style>

    <style name="AcquiringListItems">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/acq_list_item_bg</item>
    </style>

    <style name="AcquiringCardSystemsIcons">
        <item name="acqMaestroIcon">@drawable/acq_maestro</item>
        <item name="acqVisaIcon">@drawable/acq_visalogo</item>
        <item name="acqMasterCardIcon">@drawable/acq_master</item>
        <item name="acqMirIcon">@drawable/acq_mirlogo</item>
    </style>

    <style name="AcquiringNfcDescriptionTextStyle">
        <item name="android:textColor">@drawable/acq_nfc_tint_color_pressable</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="AcquiringKeyboardStyle">
        <item name="android:background">@color/acq_colorKeyboardBackground</item>
        <item name="keyTextColor">@color/acq_colorKeyText</item>
        <item name="keyCircleColor">@color/acq_colorKeyCircle</item>
    </style>

    <!---->

    <style name="AcquiringPayTitleStyle" parent="AcquiringTitleStyle">

    </style>

    <style name="AcquiringPayDescriptionStyle" parent="AcquiringDescriptionStyle">

    </style>

    <style name="AcquiringPayEmailStyle" parent="AcquiringFieldStyle">

    </style>

    <style name="AcquiringPaySecureIconStyle">
        <item name="android:src">@drawable/acq_logos_bottom</item>
    </style>

</resources>
